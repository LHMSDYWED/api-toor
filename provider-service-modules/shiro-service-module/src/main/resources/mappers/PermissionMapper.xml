<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.nmmpa.shiro.mappers.PermissionMapper">
    <resultMap id="BaseResultMap" type="cn.nmmpa.shiro.model.Permission">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="per_code" jdbcType="VARCHAR" property="perCode" />
    </resultMap>
    <sql id="Base_Column_List">
        id,
        name,
        per_code
    </sql>
    <!-- 往表中插入一条数据 字段为空不插入 系统字段需要输入 -->
    <insert id="insert" parameterType="cn.nmmpa.shiro.model.Permission">
        insert into
            permission
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="perCode != null">
                per_code,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="perCode != null">
                #{perCode,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <!-- 往表中批量插入数据 系统字段需要输入 -->
    <insert id="insertBatch" parameterType="java.util.List">
        insert into
            permission
        <trim prefix="(" suffix=")" suffixOverrides=",">
            id,
            name,
            per_code,
        </trim>
        <foreach collection="list" item="item" open="values (" close=")" separator=" ), ( ">
            <trim suffixOverrides=",">
                #{item.id,jdbcType=INTEGER},
                #{item.name,jdbcType=VARCHAR},
                #{item.perCode,jdbcType=VARCHAR},
            </trim>
        </foreach>
    </insert>
    <!-- 根据主键查询数据 所有数据 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
            <include refid="Base_Column_List" />
        from
            permission
        where
            id = #{id}
    </select>
    <!-- 根据主键修改数据 字段为空不修改 所有数据 -->
    <update id="updateById" parameterType="cn.nmmpa.shiro.model.Permission">
        update
            permission
        <set>
            <if test="id != null">
                id = #{id,jdbcType=INTEGER},
            </if>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="perCode != null">
                per_code = #{perCode,jdbcType=VARCHAR},
            </if>
        </set>
        where
            id = #{id,jdbcType=INTEGER}
    </update>
    <!-- 根据主键删除数据 物理删除 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        delete from
            permission
        where
            id = #{id}
    </delete>
    <!-- 按条件查询 对象 -->
    <select id="queryConditionsToObject" parameterType="cn.nmmpa.shiro.model.Permission" resultMap="BaseResultMap">
        select
            <include refid="Base_Column_List" />
        from
            permission
        <where>
            <if test="id != null">
                 AND id = #{id,jdbcType=INTEGER}
            </if>
            <if test="name != null">
                 AND name = #{name,jdbcType=VARCHAR}
            </if>
            <if test="perCode != null">
                 AND per_code = #{perCode,jdbcType=VARCHAR}
            </if>
        </where>
    </select>
    <!-- 按条件查询 对象 -->
    <select id="queryConditionsToList" parameterType="cn.nmmpa.shiro.model.Permission" resultMap="BaseResultMap">
        select
            <include refid="Base_Column_List" />
        from
            permission
        <where>
            <if test="id != null">
                 AND id = #{id,jdbcType=INTEGER}
            </if>
            <if test="name != null">
                 AND name = #{name,jdbcType=VARCHAR}
            </if>
            <if test="perCode != null">
                 AND per_code = #{perCode,jdbcType=VARCHAR}
            </if>
        </where>
    </select>
</mapper>